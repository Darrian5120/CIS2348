print('Birthday Calculator\nCurrent day')
curr_month = int(input('Month: '))
curr_day = int(input('Day: '))
curr_year = int(input('Year: '))

print('Birthday')
birth_month = int(input('Month: '))
birth_day = int(input('Day: '))
birth_year = int(input('Year: '))


# age adjustments
age = curr_year - birth_year
if birth_month == curr_month and birth_day > curr_day:
    age -= 1
if birth_month > curr_month:
    age -= 1
print('You are', age, 'years old.')

if curr_month == birth_month and curr_day == birth_day:
    print('Happy Birthday!')